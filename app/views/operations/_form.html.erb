<%= form_with(model: operation) do |form| %>
  <div class="form">
    <%= form.text_field :name, placeholder: :name %>
  </div>

  <div class="form">
    <%= form.text_field :amount, placeholder: :amount %>
  </div>

  <div>
    <%= form.label :groups %>:
    <%= form.collection_check_boxes(:group_ids, @client.groups, :id, :name) %>
  </div>

  <div>
    <%= form.submit 'Save', class: "btn btn-primary"  %>
  </div>
<% end %>
